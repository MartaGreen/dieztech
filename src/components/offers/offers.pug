-
  var sliders = [
    { name: "Бухгалтеры", iconId: "accountants", width: "19" },
    { name: "Репетиторы", iconId: "tutors", width: "22" },
    { name: "Программисты", iconId: "programmers", width: "20" },
    { name: "Няни и&nbsp;сиделки", iconId: "babysitters", width: "20" },
  ];

  var slidersTest = [...sliders, ...sliders, ...sliders];

section.offers 
  .offers__inner(class="page-inner")
    h2.offers__title Заголовок

    .offers__offers-slider(class="swiper" id="offers-swiper")
      .offers-slider__wrapper(class="swiper-wrapper")
        include ../offer/offer.pug
        each slider in slidersTest
          +Offer(slider) slider.name

      .offers-slider__nav-panel
        svg.offers-slider__nav-btn(class="swiper-button-prev offers-slider__prev")
          use(xlink:href="icons/sprites.svg#arrow")
        .offers-slider__pagination(class="swiper-pagination")
        svg.offers-slider__nav-btn(class="swiper-button-next offers-slider__next")
          use(xlink:href="icons/sprites.svg#arrow")