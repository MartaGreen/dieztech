header.header 
  .header__inner(class="page-inner")
    svg.header__logo(width="55" height="64" viewBox="0 0 55 64")
      use(xlink:href="icons/sprites.svg#logo")
    
    .header__nav
      a.nav__link(href="#" class="nav__link_active") Главная
      a.nav__link(href="#") О нас
      a.nav__link(href="#") Мероприятия
      a.nav__link(href="#") Новости

    .header__user-interactions 
      button.user-interactions__btn(class="user-interactions__useful") 
        svg.user-interactions__btn-icon(width="17" height="18" viewBox="0 0 17 18")
          use(xlink:href='icons/sprites.svg#btn-icon')
        span.user-interactions__btn-text Полезное
      button.user-interactions__btn(class="user-interactions__personal-account")
        span.user-interactions__btn-text Личный кабинет

    aside.header__sidebar(id="sidebar")
      .sidebar__burger 
        .sidebar__burger-item 
        .sidebar__burger-item 
        .sidebar__burger-item 
      
      .sidebar__content(class="sidebar__content_hidden")
        .sidebar__nav(class="header__nav")
          a.nav__link(href="#" class="nav__link_active") Главная
          a.nav__link(href="#") О нас
          a.nav__link(href="#") Мероприятия
          a.nav__link(href="#") Новости
        
        .sidebar__user-interactions(class="header__user-interactions") 
          button.user-interactions__btn(class="user-interactions__useful") 
            svg.user-interactions__btn-icon(width="17" height="18" viewBox="0 0 17 18")
              use(xlink:href='icons/sprites.svg#btn-icon')
            span.user-interactions__btn-text Полезное
          button.user-interactions__btn(class="user-interactions__personal-account")
            span.user-interactions__btn-text Личный кабинет